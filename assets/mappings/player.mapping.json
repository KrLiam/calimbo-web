{
    "sprites": {
        "player:sheet": { "pos": [0, 0], "size": [16, 24], "grid": [5, 6] }
    },
    "animations": {
        "player:idle:right": { "sprite": "player:sheet", "frames": [0,1,2,3,4], "interval": 0.3 },
        "player:idle:left": { "sprite": "player:sheet", "frames": [5,6,7,8,9], "interval": 0.3 },

        "player:jump:right": { "sprite": "player:sheet", "frames": [10,11,12], "interval": 0.05, "transition_to": "player:jump:right:2" },
        "player:jump:right:2": { "sprite": "player:sheet", "frames": [12], "interval": 1000.0 },
        "player:jump:left": { "sprite": "player:sheet", "frames": [15,16,17], "interval": 0.05, "transition_to": "player:jump:left:2" },
        "player:jump:left:2": { "sprite": "player:sheet", "frames": [17], "interval": 1000.0 },

        "player:fall:right": { "sprite": "player:sheet", "frames": [13,14], "interval": 0.1, "transition_to": "player:fall:right:2" },
        "player:fall:right:2": { "sprite": "player:sheet", "frames": [14], "interval": 1000.0 },
        "player:fall:left": { "sprite": "player:sheet", "frames": [18, 19], "interval": 0.1, "transition_to": "player:fall:left:2" },
        "player:fall:left:2": { "sprite": "player:sheet", "frames": [19], "interval": 1000.0 },

        "player:run:right": { "sprite": "player:sheet", "frames": [20,21,22,23,24], "interval": 0.1 },
        "player:run:left": { "sprite": "player:sheet", "frames": [25,26,27,28,29], "interval": 0.1 },

        "player_escaping": { "sprite": "player:sheet", "frames": [20,21,22,23,24], "interval": 0.2 }
    }
}
